{
    "name": "react-screen-scaler",
    "version": "0.0.2",
    "description": "Design Once, Render Everywhere: Screen-size agnostic React development for uniform environments",
    "repository": {
        "type": "git",
        "url": "git://github.com/garronej/react-screen-scaler.git"
    },
    "scripts": {
        "build": "tsc",
        "_format": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "npm run _format -- --write",
        "format:check": "npm run _format -- --list-different",
        "link-in-app": "yarn build && (ts-node --skipProject scripts/link-in-app.ts & yarn build -w)",
        "start-test-app": "yarn build && ts-node --skipProject scripts/link-in-test-app.ts && ((cd test-app && rm -rf node_modules/.cache && yarn start) & yarn build -w)"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./*": "./dist/*.js"
    },
    "lint-staged": {
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/garronej",
    "license": "MIT",
    "files": [
        "src/",
        "dist/",
        "!dist/tsconfig.tsbuildinfo"
    ],
    "keywords": [],
    "homepage": "https://github.com/garronej/react-screen-scaler",
    "devDependencies": {
        "@types/node": "^20.2.1",
        "@types/react": "^18.2.6",
        "@typescript-eslint/eslint-plugin": "^5.59.6",
        "@typescript-eslint/parser": "^5.59.6",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "husky": "^4.3.8",
        "lint-staged": "^11.1.1",
        "prettier": "^2.8.8",
        "react": "^18.2.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "tsafe": "^1.6.4"
    }
}
